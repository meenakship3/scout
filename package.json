{
  "name": "scout",
  "displayName": "Scout",
  "description": "AI powered web accessibility assistant for VS Code",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/meenakship3/scout.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "accessibility",
    "a11y",
    "html",
    "jsx",
    "linting"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:jsx",
    "onLanguage:tsx"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scout.scanWorkspace",
        "title": "Scout: Scan Workspace for Accessibility Issues"
      },
      {
        "command": "scout.verifyApiKey",
        "title": "Scout: Verify MistralAI API Key"
      },
      {
        "command": "scout.getAIFix",
        "title": "Scout: Get AI Fix for Accessibility Issue"
      },
      {
        "command": "scout.fixAll",
        "title": "Scout: Fix All Accessibility Issues"
      }
    ],
    "keybindings": [
      {
        "command": "scout.scanWorkspace",
        "key": "cmd+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "scout.fixAll",
        "key": "cmd+shift+x",
        "mac": "cmd+shift+x",
        "when": "editorLangId == html || editorLangId == jsx || editorLangId == tsx"
      }
    ],
    "configuration": {
      "title": "Scout",
      "properties": {
        "scout.mistralApiKey": {
          "type": "string",
          "default": "",
          "description": "MistralAI API key for generating accessibility fixes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-beautify": "^1.14.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.25.1",
    "js-beautify": "^1.15.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@mistralai/mistralai": "^0.0.10",
    "axe-core": "^4.8.3"
  }
}
